<!DOCKTYPE html>
<style>
body {
    background-color: #71c9fc;
}
h1 {
    color: white;
    text-align: center;
}
.row{
    height: 40px;
    text-align: right;
}
.col-sm-6{
  height: 50px;
}
.date{
    text-align: center;
}
</style>
<body>
<h1>CALENDAR</h1>
<FORM>
  Tarih: <INPUT TYPE="date" NAME="start_date"> <INPUT TYPE="submit">
</FORM>
<%start_date =params.fetch(:start_date,Date.today).to_date%>
<% date_range= (start_date.beginning_of_month.beginning_of_week..start_date.end_of_month.end_of_week).to_a %>
<table class="table">
  <thead>
    <tr>
      <% date_range.slice(0,7).each do |day| %>
      <th><%= I18n.t("date.abbr_day_names")[day.wday] %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% date_range.each_slice(7) do |week| %>
    <tr>
      <% week.each do |day| %>
      <td>
        <%=day%>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'My Appointments', controller: 'appointments' %>
</body>
