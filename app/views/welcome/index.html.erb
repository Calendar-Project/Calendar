<!DOCKTYPE html>
<style>
body {
    background-color: #71c9fc;
}
h1 {
    color: white;
    text-align: center;
}
.table{
    height: 20px;
    text-align: right;
}
.date{
    text-align: center;
}
</style>
<body>
<h1>CALENDAR</h1>
Tarih: <input type="date" name="tarih">
<%start_date =params.fetch(:start_date,Date.today).to_date%>
<% date_range= (start_date.beginning_of_month.beginning_of_week..start_date.end_of_month.end_of_week).to_a %>
<table class="table">
  <thead>
    <tr>
      <% date_range.slice(0,7).each do |day| %>
      <th><%= I18n.t("date.abbr_day_names")[day.wday] %></th>
      <% end %>
    </tr>
  </thead>
  <div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">

            </div>
        </div>
      
    </div>
</div>
  <tbody>
    <% date_range.each_slice(7) do |week| %>
    <tr>
      <% week.each do |day| %>
      <td>
        <%= day%>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'My Appointments', controller: 'appointments' %>
</body>
